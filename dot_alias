alias psd='ps aux | grep'

# docker related
alias d=docker
alias doco='docker compose'
alias docop='docker compose --profile'
alias dbuild='d build . -t'
alias drun='d run --rm -it --name'
alias drunit='d run --rm -it --name'
alias drunbash='d run --rm -it --entrypoint bash --name'
alias drund='d run --rm -d --name'
# sort -h is clever!
# https://www.baeldung.com/linux/docker-sort-images-by-size
alias dim='docker image list --format "table {{.Size}}\t{{.ID}}\t{{.Repository}}:{{.Tag}}" | sort -h'

# the-way
alias th=the-way
alias tw=the-way

# bun
alias bunhere='drunit bun -v "$PWD:/app" -w /app oven/bun:latest'
alias bunbash='drunbash bun -v "$PWD:/app" -w /app oven/bun:latest'

# time sync with wslact
alias time-sync='sudo wslact ts'

# glow
alias glow="EDITOR='emacs -Q -nw' glow"
alias glw=glow
if echo $SHELL | grep '/bash' > /dev/null; then
    if [[ $(type -t compopt) = "builtin" ]]; then
        complete -o default -F __start_glow glw
    else
        complete -o default -o nospace -F __start_glow glw
    fi
fi

# x-cli
alias x-cli='/home/user/tools/p/x-cli/x-cli.sh'
alias xc=x-cli
alias bru='xc run bruno'

# docker
alias runn='docker run --rm -v "$PWD:/books" ghcr.io/k1low/runn:latest'

# eza (exa) : ls alternatives
if [ -x "$(command -v eza)" ]; then
    alias ls="eza"
fi

# jira
if [ -x "$(command -v acli)" ]; then
    alias jira="acli jira"
fi

# Tmux display-popup
# add env var with -e "POPUP=true"
alias tp='tmux display-popup -d "#{pane_current_path}" -x C -y C -w 90% -h 70% -E'

# lazy docker
alias lzd='docker run --rm -it -v /var/run/docker.sock:/var/run/docker.sock lazyteam/lazydocker'

# sudo hack for usimg alias with sudo
alias sudo='sudo '

# VSCode
if [ -x ~/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code ]; then
    alias code='~/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code'
fi

# GitLab
if [ -x "$(command -v glab)" ]; then
    alias g=glab
    alias gm='glab mr'
    # glab co
    alias gco='glab mr checkout'
    alias gmc='glab mr checkout'
    alias gmd='glab mr diff'
    alias gmv='glab mr view'
    alias gml='glab mr list'
fi

# GitHub Copilot CLI
if [ -x "$(command -v copilot)" ]; then
    alias cop="copilot --model claude-opus-4.5 --allow-tool 'shell(git:*)' --deny-tool 'shell(git push)'"
fi
